{
  "name": "order-management-api-d1",
  "version": "1.0.0",
  "description": "Order management API using Cloudflare D1 and R2",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create order_management_db",
    "db:migrate": "wrangler d1 migrations apply order_management_db --remote",
    "db:migrate:local": "wrangler d1 migrations apply order_management_db --local",
    "db:init:remote": "wrangler d1 execute order_management_db --remote --file=./schema.sql",
    "db:shell": "wrangler d1 execute order_management_db --remote",
    "db:query": "wrangler d1 execute order_management_db --remote --command",
    "r2:create": "wrangler r2 bucket create application-logs",
    "logs:list": "wrangler r2 object list application-logs",
    "logs:get": "wrangler r2 object get application-logs"
  },
  "dependencies": {
    "itty-router": "^4.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "wrangler": "4.45.3",
    "typescript": "^5.3.3"
  }
}